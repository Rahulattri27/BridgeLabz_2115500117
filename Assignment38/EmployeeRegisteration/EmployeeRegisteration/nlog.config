<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Info">

  <targets>
    <!-- Console Logging -->
    <target xsi:type="Console" name="console" layout="${longdate} [${level}] ${message} ${exception}" />

    <!-- File Logging (Cross-platform relative path) -->
    <target xsi:type="file" name="file" fileName="/Users/rahulkumarair/Projects/EmployeeRegisteration/EmployeeRegisteration/Logs/log.log"
            layout="${longdate} [${level}] ${message} ${exception}"
            archiveFileName="Logs/archives/log.{#}.txt"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            archiveEvery="Day"/>
  </targets>

  <rules>
    <!-- Log everything Info and higher to both console and file -->
    <logger name="*" minlevel="Info" writeTo="file" />
  </rules>

</nlog>
